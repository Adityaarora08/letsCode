#include <bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    int n;
    int same = 0, diff = 0;
    cin >> n;
    cin >> s;
    for (int i = 1; i < n; i++)
    {
        if ((s[i] != s[diff]))
            diff = i;
        else
            same++;
    }

    cout << same << endl;
    return 0;
